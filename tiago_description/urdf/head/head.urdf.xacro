<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!--File includes-->
  <xacro:include filename="$(find tiago_description)/urdf/deg_to_rad.xacro" />
  <xacro:include filename="$(find tiago_description)/urdf/head/head.transmission.xacro" />
  <xacro:include filename="$(find tiago_description)/urdf/sensors/xtion_pro_live.urdf.xacro" />

  <!--Constant parameters-->
  <xacro:property name="head_friction" value="1.0" />
  <xacro:property name="head_damping"  value="0.5" />
  <xacro:property name="head_max_vel"  value="3.0" />
  <xacro:property name="head_eps"      value="0.02" />

  <!--************************-->
  <!--     HEAD_1 (PAN)       -->
  <!--************************-->
  <xacro:macro name="head_1" params="name parent">
    <link name="${name}_link">
      <inertial>
        <origin xyz="0.0208 -0.00025 0.0215" rpy="0 0 0" />
        <mass value="0.09793" />
        <inertia ixx="0.00005844626"  ixy="-0.00000051494"  ixz="0.00004662971" iyy="0.00001161435" iyz="0.0" izz="0.00005236593" />
      </inertial>
      <visual>
        <origin xyz="0.0305 0 0.0175" rpy="0 0 0"/>
        <geometry>
          <box size="0.05 0.035 0.035"/>
        </geometry>
        <material name="DarkGrey" />
      </visual>
      <collision>
        <origin xyz="0.0305 0 0.0175" rpy="0 0 0" />
        <geometry>
          <box size="0.05 0.035 0.035"/>
        </geometry>
        <material name="DarkGrey" />
      </collision>
    </link>

    <joint name="${name}_joint" type="revolute">
      <parent link="${parent}"/>
      <child link="${name}_link"/>
      <origin xyz="0.193 0 0.04" rpy="${0.0 * deg_to_rad} 0 0" />
      <axis xyz="0 0 1" />
      <limit lower="${-90.0 * deg_to_rad}" upper="${90.0 * deg_to_rad}" effort="5.197" velocity="${head_max_vel}" />
      <dynamics damping="${head_damping}" friction="${head_friction}"/>

      <safety_controller k_position="20"
                         k_velocity="20"
                         soft_lower_limit="${-90.0 * deg_to_rad + head_eps}"
                         soft_upper_limit="${ 90.0 * deg_to_rad - head_eps}" />
    </joint>

    <gazebo reference="${name}_link">
      <mu1>0.9</mu1>
      <mu2>0.9</mu2>
    </gazebo>

    <gazebo reference="${name}_joint">
       <implicitSpringDamper>1</implicitSpringDamper>
    </gazebo>


    <!-- extensions -->
    <xacro:head_transmission name="${name}" reduction="1" />

  </xacro:macro>

  <!--************************-->
  <!--      HEAD_2 (TILT)     -->
  <!--************************-->
  <xacro:macro name="head_2" params="name parent">
    <link name="${name}_link">
      <inertial>
        <origin xyz="0.04149 -0.01221 0.001" rpy="0 0 0" />
        <mass value="0.24875" />
        <inertia ixx="0.0000498057"  ixy="-0.00012697329"  ixz="0.00000011444" iyy="0.00044922137" iyz="-0.00000065525" izz="0.00048113173" />
      </inertial>
    </link>

    <joint name="${name}_joint" type="revolute">
      <parent link="${parent}"/>
        <child link="${name}_link"/>
      <origin xyz="0.0355 0 0.023" rpy="${-90.0 * deg_to_rad} 0 0" />
      <axis xyz="0 0 1" />
      <limit lower="${-90 * deg_to_rad}" upper="${45.0 * deg_to_rad}" effort="2.77" velocity="${head_max_vel}" />
      <dynamics damping="${head_damping}" friction="${head_friction}"/>

      <safety_controller k_position="20"
                         k_velocity="20"
                         soft_lower_limit="${-90.0 * deg_to_rad + head_eps}"
                         soft_upper_limit="${ 45.0 * deg_to_rad}" />
    </joint>
  </xacro:macro>

  <xacro:macro name="head" params="name parent">
    <xacro:head_1 name="${name}_1" parent="${parent}" />
    <xacro:head_2 name="${name}_2" parent="${name}_1_link"/>
    <xacro:xtion_pro_live name="xtion" parent="${name}_2">
      <origin xyz="0.064192 -0.017614 0" rpy="${90 * deg_to_rad} 0 0" />
      <origin xyz="0.064192 -0.017641 0" rpy="0 ${90 * deg_to_rad} 0" />
    </xacro:xtion_pro_live>
  </xacro:macro>

</robot>
